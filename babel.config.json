{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@types": "./dist/@types/index.d.js",
          "@shared": "./dist/shared/index.js"
        }
      }
    ]
  ],
  "ignore": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}